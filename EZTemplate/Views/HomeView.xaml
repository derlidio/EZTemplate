<?xml version="1.0" encoding="UTF-8" ?>
<ez:EZContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                         xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                         xmlns:ez="clr-namespace:EZAppMaker.Components;assembly=EZAppMaker"
                         xmlns:resource="clr-namespace:EZAppMaker.Resources;assembly=EZAppMaker"
                         xmlns:view="clr-namespace:EZTemplate.Views"
                         x:Class="EZTemplate.Views.HomeView"
                         x:DataType="view:HomeView"
                         ItemId="HomeView"
                         Title="Home">
    <ContentView.Content>
        <Grid HeightRequest="{Binding AvailableHeight}">
            <Label Text="This is the Home Page!" HorizontalOptions="Center" Margin="0,25,0,0"/>
            <Image WidthRequest="256" Source="{resource:ImageResource EZTemplate.Assets.Images.logo.png}"/>
        </Grid>
    </ContentView.Content>

</ez:EZContentView>